<p id="notice"><%= notice %></p>

<h1>Listing Reminders</h1>

<table>
  <thead>
    <tr>
      <th>Phone number</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.phone_number %></td>
        <td><%= reminder.time.strftime('%H:%M %p, %b %d, %Y')  %></td>
        <td><%= reminder.user_id %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %> <br>
